<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.mad"
  version="1.0.0"
  name="MAD Audio Decoder"
  provider-name="spiff">
  <requires>
    <import addon="kodi.audiodecoder" version="1.0.0"/>
  </requires>
  <extension
    point="kodi.audiodecoder"
    name="mad"
    extension=".mp3|.mp2"
    mimetypes="audio/mpeg|audio/mpeg3|audio/mp3"
    library_linux="audiodecoder.mad.so"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">MAD Audio Decoder</summary>
    <description lang="en">MAD (MP2/MP3) Audio Decoder</description>
    <platform>all</platform>
  </extension>
</addon>
